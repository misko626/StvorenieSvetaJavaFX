<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.demo.CurrentPlanetController">
   <children>
      <Label layoutX="41.0" layoutY="38.0" text="Spravuj svoju planetu" textFill="#118cab">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font>
      </Label>
      <Label layoutX="41.0" layoutY="87.0" text="Nazov planety:" textFill="#18966e">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="41.0" layoutY="250.0" text="Priemer planety:" textFill="#18966e">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="41.0" layoutY="168.0" text="Vaha planety:" textFill="#18966e">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="planetName" layoutX="41.0" layoutY="123.0" onAction="#onClickUpdate" />
      <TextField fx:id="planetDiametry" layoutX="41.0" layoutY="290.0" onAction="#onClickUpdate" />
      <TextField fx:id="planetWeight" layoutX="41.0" layoutY="207.0" onAction="#onClickUpdate" />
      <Button fx:id="updateButton" layoutX="90.0" layoutY="340.0" mnemonicParsing="false" onAction="#onClickUpdate" text="Update" />
      <Label fx:id="planetInfoLabel" layoutX="239.0" layoutY="88.0" text="Label">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="508.0" layoutY="340.0" mnemonicParsing="false" onAction="#onClickBack" text="Back" />
   </children>
</AnchorPane>
